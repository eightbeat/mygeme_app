<div class="row">
  <div class="col-md-12">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-wrapper">
        <h1>ログイン</h1>
        <form>
          <div class="form-item">
            <label for="email"></label>
            <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
          </div>
          <div class="form-item">
            <label for="password"></label>
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
          </div>
          <div class="form-item">
          <div class="button-panel">
            <input type="submit" class="button" title="Sign In" value="送信"></input>
          </div>
        </form>
        <div class="form-footer">
        </div>
    </div>
    <% end %>
  </div>
</div>
